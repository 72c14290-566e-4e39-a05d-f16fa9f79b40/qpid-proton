# Project options

PROJECT_NAME           = proton-cpp
PROJECT_NUMBER         = @PN_VERSION_MAJOR@.@PN_VERSION_MINOR@
PROJECT_BRIEF          = "Proton C++ API"
OUTPUT_DIRECTORY       = .
OUTPUT_LANGUAGE        = English
BRIEF_MEMBER_DESC      = YES
REPEAT_BRIEF           = YES
INLINE_INHERITED_MEMB  = YES
JAVADOC_AUTOBRIEF      = YES
MULTILINE_CPP_IS_BRIEF = NO
INHERIT_DOCS           = YES
BUILTIN_STL_SUPPORT    = YES
INLINE_SIMPLE_STRUCTS  = YES

# Build related configuration options

EXTRACT_ALL            = YES
INTERNAL_DOCS          = NO

# configuration options related to warning and progress messages

QUIET                  = YES
WARNINGS               = YES

# configuration options related to the input files

INPUT = @CMAKE_SOURCE_DIR@/proton-c/bindings/cpp/include @CMAKE_SOURCE_DIR@/proton-c/bindings/cpp/docs @CMAKE_SOURCE_DIR@/examples/cpp/README.hpp
FILE_PATTERNS          = *.hpp *.md
RECURSIVE              = YES
EXAMPLE_PATH           = @CMAKE_SOURCE_DIR@/examples/cpp
EXAMPLE_RECURSIVE      = YES

# View and list options

GENERATE_TREEVIEW      = YES
GENERATE_TODOLIST      = NO
GENERATE_TESTLIST      = NO
GENERATE_BUGLIST       = NO
GENERATE_DEPRECATEDLIST= YES


# configuration options related to the HTML output

GENERATE_HTML          = YES
HTML_OUTPUT            = html
HTML_FILE_EXTENSION    = .html

GENERATE_LATEX         = NO
